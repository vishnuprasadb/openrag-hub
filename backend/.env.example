# --------------------------------------------------
# Application
# --------------------------------------------------
ENV=local

# --------------------------------------------------
# LLM Configuration
# --------------------------------------------------
# Supported values: openai (default), anthropic (future)
LLM_PROVIDER=openai

# Required if LLM_PROVIDER=openai
OPENAI_API_KEY=

# --------------------------------------------------
# Slack Integration
# --------------------------------------------------
# Required only if Slack integration is enabled
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# --------------------------------------------------
# Vector Store
# --------------------------------------------------
# Supported values: chroma (default), pinecone (future)
VECTOR_DB=chroma

# --------------------------------------------------
# ChromaDB Configuration (Required if VECTOR_DB=chroma)
# --------------------------------------------------
# For docker/production setup, change host to container name
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CHROMA_SERVER_HOST=localhost
CHROMA_SERVER_HTTP_PORT=8000
CHROMA_SERVER_GRPC_PORT=50051
# API implementation: 'local' (embedded) or 'rest' (client/server)
CHROMA_API_IMPL=local
# DB implementation: 'duckdb+parquet' is standard for persistent embedded
CHROMA_DB_IMPL=duckdb+parquet

# --------------------------------------------------
# Google Drive Ingestion
# --------------------------------------------------
# Required only if Google Drive ingestion is used
GDRIVE_CLIENT_ID=
GDRIVE_CLIENT_SECRET=
GDRIVE_REFRESH_TOKEN=
